{
  "name": "@repo/api",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./hc": {
      "import": {
        "types": "./src/hc.ts",
        "default": "./dist/hc.js"
      }
    },
    "./auth": {
      "import": {
        "types": "./src/lib/auth.ts",
        "default": "./dist/lib/auth.js"
      }
    }
  },
  "scripts": {
    "build": "dotenv-run -e production -- tsc && tsc-alias",
    "dev": "pnpm --filter @repo/api --parallel \"/^dev:.*/\"",
    "dev:tsup": "dotenv-run -e development -- tsup --watch",
    "dev:tsx": "dotenv-run -e development -- tsx watch src/index.ts --clear-screen=false",
    "eslint:fix": "eslint --fix src",
    "typecheck": "tsc --noEmit --incremental --watch"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@repo/db": "workspace:*",
    "@repo/auth": "workspace:*",
    "date-fns": "^4.1.0",
    "hono": "^4.6.15",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "tsc-alias": "^1.8.10",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2"
  }
}
